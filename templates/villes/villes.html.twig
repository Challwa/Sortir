{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}: Villes {% endblock %}

{% block body %}
    <div class="container">
        <h1>GÃ©rer les villes</h1>

        <div>
            <p>Filtrer les villes</p>
            <label for="ville-search">Le nom contient:</label>
            <input type="search" id="ville-search" name="filter"/>
            <button type="submit">Rechercher</button>
        </div>
        <br>
        <div class="table-container">
            <table>
                <thead>
                <tr>
                    <th>Ville</th>
                    <th>Code Postal</th>
                    <th>Actions</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>

                {% for city in villes %}

                    <tr>
                        <th>{{ city.nom | upper}}</th>
                        <th>{{ city.codePostal }}</th>
                        <th><a href="{{ path('app_villes_edit', { id : city.id }) }}">Modifier</a></th>
                        <th>-</th>
                        <th><a href="{{ path('app_villes_supprimer', { id : city.id }) }}" onclick="return confirm('Voulez-vous vraiment supprimer cette ville ?')">Supprimer</a></th>

                    </tr>
                 {% endfor %}
                    </tbody>
            </table>
        </div>
        <br>
        <button type="submit"><a href="{{ path('app_villes_ajouter') }}">Ajouter</a></button>
    </div>


{% endblock %}