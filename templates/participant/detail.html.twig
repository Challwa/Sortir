{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ participant.pseudo }} {% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ participant.pseudo|capitalize }}</h1>
        <table>
            <thead>
                <tr>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Téléphone</th>
                    <th>Email</th>
                    <th>Site</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ participant.prenom }}</td>
                    <td>{{ participant.nom }}</td>
                    <td>{{ participant.telephone }}</td>
                    <td>{{ participant.email }}</td>
                    <td>{{ participant.sites.nom }}</td>
                </tr>
            </tbody>
        </table>

    </div>

{% endblock %}