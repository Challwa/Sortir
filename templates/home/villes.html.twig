{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}: Villes {% endblock %}

{% block body %}
    <div class="container">
        <h1>GÃ©rer les villes</h1>

        <div>
            <p>Filtrer les sites</p>
            <label for="ville-search">Le nom contient:</label>
            <input type="search" id="ville-search" name="filter"/>
            <button type="submit">Rechercher</button>
        </div>
        <br>
        <div class="table-container">
            <table>
                <thead>
                <tr>
                    <th>Ville</th>
                    <th>Code Postal</th>
                    <th>Actions</th>
                </tr>
                </thead>
                {% for i in villes %}
                    <tbody>
                    <tr>
                        <th>{{ i.nom }}</th>
                        <th>{{ i.codePostal }}</th>
                        <td>
                        <a href="{{ path('app_edit', { id : i.id }) }}">Modifier</a> |
                            <a href="{{ path('app_delete', { id : i.id}) }}">Supprimer</a>
                        </td>
                    </tr>
                    </tbody>
                {% endfor %}
            </table>
        </div>
        <br>
        <button type="submit">Ajouter</button>
    </div>


{% endblock %}